body{
  background-image: url(images/background.jpg);
  margin: 1% 5%;
  padding: 1% 5%;
  font-family: sans-serif;
  color: white;
  }
   

h1{
  border-bottom: white 1px solid;
  margin: 30px;
  font-size: 2em;
  text-align: center;
}

hr{
  background-color: white;
}

#logo {
  margin-left: auto;
  margin-right: auto;
  display: block; 
  width: 225px;
  height: 225px;  
}

* {
  margin: 0;
  padding: 0;
}

.nav {
  background-color: rgb(74, 147, 243);
  margin-top: 30px;
}

ul.menu{
  list-style-type: upper-roman;
  padding-inline-start: 30px;
} 



h3 {
  text-align: center;
}


a:visited{
  color:blue;
}

a:hover{
  background-color: white;
}

a:link{
  color: white;
}

@media (min-width: 768px){
  .nav {
    float: left;
    width: 12em;
  }
  .contenu{
    margin-left: 12em;
  }
  .pics{
    width: 700px;
  }
}

@media (min-width: 576px ){
  .nav {
    display: block;
  }
 }


@media (max-width:576){
  .pics {
    width: 300px;
  }
}

#conclusion{
  display: none;
}

#button{
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.warning{
  margin-top: 10px;
  color: red;
  text-align: center;
}

.recommandation{
  color: red;
}

.cherche{
	 margin-top: 10px;
  margin-bottom: 10px;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.title{
	background-color: rgb(74, 147, 243);
	position:absolute;
	top:400px;
	width: 12em;
}

.border{
	margin-left: 12em;
	border: 1px solid white;
}

.corp{
	margin-left: 250px; 
	margin-right: 100px;
	position:absolute;
	top:350px;
}

.titleEn{
	background-color: rgb(74, 147, 243);
	width: 12em;
	position:absolute;
	top:400px;
	left:100px;
}

.box{
	position:absolute;
	top:350px;
	left:100px;
}


